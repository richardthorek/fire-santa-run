  "scripts": {
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:client\"",
    "dev:api": "cd api && func start --port 7071 --cors \"*\" --verbose",
    "dev:e2e": "concurrently \"npm:dev:api\" \"npm:dev:client\"",
