    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:a11y": "vitest run --testNamePattern=\"a11y\"",
    "audit:a11y": "npm run test:a11y && echo 'âœ… Accessibility tests passed'"
  },
